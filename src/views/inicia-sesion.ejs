<%- include('partials/_header') %>

<div class="container mt-5">
    <div class="row mt-5 p-5">
        <div class="col-sm-10 offset-sm-1 col-md-8 offset-md-2">
            <div class="bs-component mt-5 pt-4">
                <form action="/login", method="post">
                    <fieldset>
                        <legend>Iniciar sesión</legend>
                        <!-- Mostrar mensajes de error -->
                        <% if (messages.error && messages.error.length > 0) { %>
                            <div class="alert alert-danger">
                                <% for (let error of messages.error) { %>
                                    <p><%= error %></p>
                                <% } %>
                            </div>
                        <% } %>

                        <div class="form-group">
                            <label for="exampleInputEmail1" class="form-label mt-4">Email</label>
                            <input type="email" name="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Introduce tu Email" data-cip-id="exampleInputEmail1">
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword1" class="form-label mt-4">Contraseña</label>
                            <input type="password" name="contraseña" class="form-control" id="exampleInputPassword1" placeholder="Introduce tu Contraseña" data-cip-id="exampleInputPassword1">
                        </div>
                        
                    </fieldset>
                    <button type="submit" class="btn btn-primary mt-5">Iniciar Sesión</button>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('partials/_footer') %>