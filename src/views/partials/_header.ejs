<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Usuarios</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/lux/bootstrap.css">
<body>

   
    <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Madrid Sonando</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
              <li class="nav-item">
                <a class="nav-link" href="/sonido" id="navLinkSonido">Sonido
                  <span class="visually-hidden">(current)</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/audiovisual" id="navLinkAudiovisual">Audiovisual</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/marketing" id="navLinkMarketing">Marketing</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/moda" id="navLinkModa">Moda</a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="#">Action</a>
                  <a class="dropdown-item" href="#">Another action</a>
                  <a class="dropdown-item" href="#">Something else here</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="#">Separated link</a>
                </div>
              </li>
              
            </ul>
              <a class="btn btn-secondary my-2 my-sm-0" id="navRegister" href="/registrarse">Registrate</a>
          </div>
        </div>
      </nav>

    <script>
      // Obtenemos la ruta de la página actual
      var path = window.location.pathname;

      // Función para agregar la clase "active" al enlace correspondiente
      function setActiveLink(linkId, linkPath) {
        var link = document.getElementById(linkId);
        if (path === linkPath) {
          link.classList.add('active');
        }
      }

      function hideRegister(id, linkPath) {
        var link = document.getElementById(id);
        if (path === linkPath) {
          link.style.display = "none";
        }
      }

      // Llamamos a la función para cada enlace
      setActiveLink('navLinkSonido', '/sonido');
      setActiveLink('navLinkAudiovisual', '/audiovisual');
      setActiveLink('navLinkMarketing', '/marketing');
      setActiveLink('navLinkModa', '/moda');
      hideRegister('navRegister', '/registrarse')
    </script>

      
    
